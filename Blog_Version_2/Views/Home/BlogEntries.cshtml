@{
    ViewData["Title"] = "Blog Entries";
    Blog_Version_2.ModelsDAL.Blog_ContextDAL _context = new Blog_Version_2.ModelsDAL.Blog_ContextDAL();
}
<div class="main-banner header-text">
    <div class="container-fluid">
        <div class="owl-banner owl-carousel">
            @foreach (var post in _context.Posts)
            {
                <div class="item">
                    <img src="@post.PreviewPhoto" alt="" />
                    <div class="item-content">
                        <div class="main-content">
                            <div class="meta-category">
                                <span>@post.Category</span>
                            </div>
                            <a href="post-details.html"><h4>@post.PreviewText</h4></a>
                            <ul class="post-info">
                                <li><a href="#">@post.Author</a></li>
                                <li><a href="#">@post.Date</a></li>
                                <li><a href="#">@_context.Comments.Where(comment => comment.Post == post.Id).ToList().Count Comments</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<section class="blog-posts grid-system">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="all-blog-posts">
                    <div class="row">
                        @foreach (var post in _context.Posts)
                        {
                            <div class="col-lg-6">
                                <div class="blog-post">
                                    <div class="blog-thumb">
                                        <img src="@post.PreviewPhoto" alt="">
                                    </div>
                                    <div class="down-content">
                                        <span>@post.Category</span>
                                        <a href="post-details.html"><h4>@post.PreviewText</h4></a>
                                        <ul class="post-info">
                                            <li><a href="#">@post.Author</a></li>
                                            <li><a href="#">@post.Date</a></li>
                                            <li><a href="#">@_context.Comments.Where(comment => comment.Post == post.Id).ToList().Count Comments</a></li>
                                        </ul>
                                        <p>@post.Description.Split(".")[0]</p>
                                        <div class="post-options">
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <ul class="post-tags">
                                                        <li><i class="fa fa-tags"></i></li>
                                                        <li><a href="#">@post.Tags</a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="col-lg-12">
                            <ul class="page-numbers">
                                <li><a href="#">1</a></li>
                                <li class="active"><a href="#">2</a></li>
                                <li><a href="#">3</a></li>
                                <li><a href="#"><i class="fa fa-angle-double-right"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <partial name="../Shared/CategoryPostPartial.cshtml" />
        </div>
    </div>
</section>