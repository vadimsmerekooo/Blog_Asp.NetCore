@model Blog_Version_2.ModelsDAL.Tags
@{
    ViewData["Title"] = "Create Tags";
}
<div class="main-banner header-text">
    <div class="container-fluid">
        <div class="owl-banner owl-carousel">
        </div>
    </div>
</div>
<section class="blog-posts panel-admin">
    <div class="container">
        <div class="row">
            <form asp-action="CreateTags" asp-controller="Admin">
                <div class="form-group">
                    <label class="text-light">Tag</label>
                    <input asp-for="Tag" type="text" class="form-control bg-dark text-light" id="first_input" />
                </div>
                <div class="form-group">
                    <label class="text-light">Url</label>
                    <input asp-for="Url" type="text" class="form-control bg-dark text-light" id="second_input" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-outline-dark text-light">Create</button>
                </div>
            </form>
        </div>
    </div>
</section>